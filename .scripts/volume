###############################################################################
## Using pulseaudio
###############################################################################

case $1 in
    "up") pamixer -u -i $2;;
    "down") pamixer -u -d $2;;
    "mute") pamixer -m;;
    "unmute") pamixer -u;;
    "toggle") pamixer -t;;
    "get") #pamixer --get-volume;;
	if $(pamixer --get-mute); then
		echo "muted ($(pamixer --get-volume))";
	else
		echo "$(pamixer --get-volume)";
	fi;;
    "update") ;;
    *) help;;
esac


